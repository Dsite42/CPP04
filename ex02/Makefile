C++ = c++
C++_FLAGS = -Wall -Wextra -Werror -g -std=c++98 #-fsanitize=address
INFILES = 	AAnimal.cpp\
			Dog.cpp\
			main.cpp\
			Cat.cpp\
			Brain.cpp
			
OBJFILES = $(INFILES:.cpp=.o)

NAME = Abstract_class

all: $(NAME)


$(NAME):$(OBJFILES)
	$(C++) $(C++_FLAGS) $(OBJFILES) -o $(NAME) 

clean:
	rm -f $(OBJFILES)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re